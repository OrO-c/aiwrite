<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AIWritingAssistant" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md3_primary</item>
        <item name="colorPrimaryVariant">@color/md3_primaryContainer</item>
        <item name="colorOnPrimary">@color/md3_onPrimary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md3_secondary</item>
        <item name="colorSecondaryVariant">@color/md3_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md3_onSecondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.AIWritingAssistant.NoActionBar" parent="Theme.AIWritingAssistant">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.AIWritingAssistant.Transparent" parent="Theme.AIWritingAssistant.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>